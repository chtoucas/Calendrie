# EditorConfig is awesome: https://EditorConfig.org

root = true

#### Core EditorConfig Options ####

[*]
insert_final_newline = true
indent_style = space
indent_size = 4
tab_width = 4
trim_trailing_whitespace = true
end_of_line = crlf

# JSON files
[*.json]
indent_size = 2

# XML files
[*.xml]
indent_size = 2

# XML project files
[*.{csproj,fsproj,proj,projitems,shproj}]
indent_size = 2

# XML config files
[*.{props,targets,config,nuspec,resx}]
indent_size = 2

# C# files
[*.cs]
charset = utf-8-bom

#### Diagnostic configuration ####

# Here, we are only interested by the special cases.
# The global configuration is done within .globalconfig.

# To enable Code Analysis on generated files, we pretend that they are not...
[src/Calendrie/**/*.g.cs]
generated_code = false
# Remove redundant nullable directive
dotnet_diagnostic.IDE0240.severity = none
